{
  "name": "educonnect-backend",
  "version": "1.0.0",
  "description": "EduConnect backend (Node.js + Express + MongoDB)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "generate:dart-client": "openapi-generator-cli generate -i docs/openapi.yaml -g dart-dio -o ../lib/src/core/api_client_generated_full",
    "generate:dart-client:docker": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/docs/openapi.yaml -g dart-dio -o /local/../lib/src/core/api_client_generated_full"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "socket.io": "^4.8.1",
    "winston": "^3.14.2"
  },
  "swaggerDependencies": {
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
